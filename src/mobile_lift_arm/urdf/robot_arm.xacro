<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="robot_arm" params="parent">
    <!-- Đế arm -->
    <link name="arm_base_link">
      <inertial>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <mass value="3.0"/>
        <inertia ixx="0.03" ixy="0" ixz="0" iyy="0.03" iyz="0" izz="0.03"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <geometry><cylinder radius="0.06" length="0.1"/></geometry>
        <material name="orange"><color rgba="0.9 0.5 0.2 1"/></material>
      </visual>
      <collision>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <geometry><cylinder radius="0.06" length="0.1"/></geometry>
      </collision>
    </link>
    <joint name="arm_base_fixed" type="fixed">
      <parent link="${parent}"/>
      <child link="arm_base_link"/>
    </joint>

    <!-- Khớp 1: yaw -->
    <link name="arm_shoulder_yaw_link">
      <inertial>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
        <mass value="2.0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
        <geometry><box size="0.08 0.08 0.15"/></geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.075" rpy="0 0 0"/>
        <geometry><box size="0.08 0.08 0.15"/></geometry>
      </collision>
    </link>
    <joint name="arm_shoulder_yaw_joint" type="revolute">
      <parent link="arm_base_link"/>
      <child link="arm_shoulder_yaw_link"/>
      <origin xyz="0 0 0.07" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-3.14" upper="3.14" effort="30" velocity="1.5"/>
      <dynamics damping="0.3"/>
    </joint>

    <!-- Khớp 2: pitch -->
    <link name="arm_shoulder_pitch_link">
      <inertial>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <mass value="2.0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <geometry><box size="0.08 0.25 0.08"/></geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <geometry><box size="0.08 0.25 0.08"/></geometry>
      </collision>
    </link>
    <joint name="arm_shoulder_pitch_joint" type="revolute">
      <parent link="arm_shoulder_yaw_link"/>
      <child link="arm_shoulder_pitch_link"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="30" velocity="1.2"/>
      <dynamics damping="0.3"/>
    </joint>

    <!-- Khớp 3: elbow -->
    <link name="arm_elbow_link">
      <inertial>
        <origin xyz="0 0 0.11" rpy="0 0 0"/>
        <mass value="1.5"/>
        <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.015"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.11" rpy="0 0 0"/>
        <geometry><box size="0.06 0.22 0.06"/></geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.11" rpy="0 0 0"/>
        <geometry><box size="0.06 0.22 0.06"/></geometry>
      </collision>
    </link>
    <joint name="arm_elbow_joint" type="revolute">
      <parent link="arm_shoulder_pitch_link"/>
      <child link="arm_elbow_link"/>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="20" velocity="1.2"/>
      <dynamics damping="0.3"/>
    </joint>

    <!-- End-effector -->
    <link name="ee_link">
      <inertial>
        <origin xyz="0 0 0.11" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0.11" rpy="0 0 0"/>
        <geometry><sphere radius="0.03"/></geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.11" rpy="0 0 0"/>
        <geometry><sphere radius="0.03"/></geometry>
      </collision>
    </link>
    <joint name="ee_fixed" type="fixed">
      <parent link="arm_elbow_link"/>
      <child link="ee_link"/>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>
