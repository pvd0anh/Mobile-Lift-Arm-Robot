<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="LIFT_MIN" value="0.0"/>
  <xacro:property name="LIFT_MAX" value="1.2"/>
  <xacro:property name="TOP_XY"   value="0.5"/>
  <xacro:property name="TOP_T"    value="0.05"/>

  <xacro:macro name="scissor_lift" params="parent">
    <link name="lift_link">
      <inertial>
        <origin xyz="0 0 ${TOP_T/2}" rpy="0 0 0"/>
        <mass value="8.0"/>
        <inertia ixx="0.08" ixy="0" ixz="0" iyy="0.08" iyz="0" izz="0.08"/>
      </inertial>
      <visual>
        <origin xyz="0 0 ${TOP_T/2}" rpy="0 0 0"/>
        <geometry><box size="${TOP_XY} ${TOP_XY} ${TOP_T}"/></geometry>
        <material name="blue"><color rgba="0.2 0.3 0.9 1"/></material>
      </visual>
      <collision>
        <origin xyz="0 0 ${TOP_T/2}" rpy="0 0 0"/>
        <geometry><box size="${TOP_XY} ${TOP_XY} ${TOP_T}"/></geometry>
      </collision>
    </link>

    <joint name="lift_joint" type="prismatic">
      <parent link="${parent}"/>
      <child link="lift_link"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${LIFT_MIN}" upper="${LIFT_MAX}" effort="500" velocity="0.2"/>
      <dynamics damping="5.0" friction="0.1"/>
    </joint>

    <link name="lift_top_link"/>
    <joint name="lift_top_fixed" type="fixed">
      <parent link="lift_link"/>
      <child link="lift_top_link"/>
    </joint>
  </xacro:macro>
</robot>
